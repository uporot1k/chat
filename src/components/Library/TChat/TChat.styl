.t-chat 
  height calc(100vh - 84px);
  display grid
  grid-template-rows 80% 1fr
  &-item
    max-width 590px
    margin: 30px 0
    &__text
      padding 16px
      box-shadow -4px 5px 8px rgba(67, 86, 100, 0.12), -1px 2px 4px rgba(67, 86, 100, 0.1)
      background-color #ffffff
      color #778699
      text-align: left
    &__name
      text-align left
      color #254050
      font-size 14px
      font-weight 900
      line-height 22px
      margin-bottom: 8px
    &__created
      text-align: left
      margin-top: 4px  
  &__body
    flex 1
    background-color #fafbfd
    overflow-y: auto;
    padding: 24px
  &__panel
    display grid
    grid-template-columns 80% 1fr  
    grid-gap 32px
    align-items flex-start
    padding 32px 0